<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="@dimen/_20dp"
    android:layout_marginVertical="@dimen/_10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.cardview.widget.CardView
        android:layout_width="@dimen/_100dp"
        android:layout_height="@dimen/_100dp"
        app:cardBackgroundColor="@color/grayf5"
        app:cardCornerRadius="@dimen/_8dp"
        app:cardElevation="0dp">
        <ImageView
            android:id="@+id/img"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/test_iphone2"
            android:padding="@dimen/_5dp"/>
    </androidx.cardview.widget.CardView>
    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:layout_marginStart="@dimen/_8dp">
        <TextView
            android:id="@+id/nameTv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Apple Mac book pro 2020â€¨M1 500 GB, 16 GB RAM (A12334)"
            style="@style/text_black_app_medium_12"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_marginTop="@dimen/_10dp">
            <TextView
                android:id="@+id/priceTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10 SR"
                style="@style/text_black_app_bold_14"/>
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/productColor"
                android:layout_width="@dimen/_18dp"
                android:layout_height="@dimen/_18dp"
                app:layout_constraintTop_toBottomOf="@id/productNameTv"
                app:layout_constraintBottom_toBottomOf="@id/productImg"
                app:layout_constraintStart_toStartOf="@id/productNameTv"
                app:civ_border_overlay="true"
                android:src="@color/trans"
                app:civ_border_width="1dp"
                app:civ_border_color="@color/graye0"
                android:layout_marginStart="@dimen/_8dp"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical">
            <ImageButton
                android:id="@+id/minusBtn"
                android:layout_width="@dimen/_28dp"
                android:layout_height="@dimen/_28dp"
                android:src="@drawable/ic_minus"
                android:background="@drawable/bg_circle_trans_graystroke"/>
            <TextView
                android:id="@+id/qtyTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1"
                style="@style/text_gray65_regular_14"
                android:layout_marginHorizontal="@dimen/_8dp"/>
            <ImageButton
                android:id="@+id/plusBtn"
                android:layout_width="@dimen/_28dp"
                android:layout_height="@dimen/_28dp"
                android:src="@drawable/ic_plus"
                android:background="@drawable/bg_circle_trans_graystroke"/>
            <Space
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"/>
            <ImageButton
                android:id="@+id/removeBtn"
                android:layout_width="@dimen/_28dp"
                android:layout_height="@dimen/_28dp"
                android:src="@drawable/ic_delete_small"
                android:background="@drawable/bg_circle_grayef"
                android:tint="#B37A7A7A"/>
        </LinearLayout>
    </LinearLayout>


</LinearLayout>