<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/main_color"
        android:orientation="vertical">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_splash_bg"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/header"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:layout_marginHorizontal="@dimen/_16dp"
            app:layout_constraintTop_toTopOf="parent">

            <ImageButton
                android:id="@+id/backBtn"
                android:layout_width="@dimen/_45dp"
                android:layout_height="@dimen/_45dp"
                android:src="@drawable/ic_back"
                android:background="@drawable/bg_circle_white"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                />
            <com.google.android.material.progressindicator.CircularProgressIndicator
                android:id="@+id/cProgress"
                android:layout_width="@dimen/_40dp"
                android:layout_height="@dimen/_40dp"
                app:indicatorColor="@color/black"
                app:trackColor="#33000000"
                app:indicatorSize="40dp"
                android:progress="5"
                android:max="5"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5"
                android:paddingTop="@dimen/_4dp"
                style="@style/text_black_app_bold_18"
                app:layout_constraintBottom_toBottomOf="@id/cProgress"
                app:layout_constraintTop_toTopOf="@id/cProgress"
                app:layout_constraintEnd_toEndOf="@id/cProgress"
                app:layout_constraintStart_toStartOf="@id/cProgress"
                />
        </androidx.constraintlayout.widget.ConstraintLayout>
        <TextView
            android:id="@+id/tv1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/details"
            style="@style/text_black_app_bold_20"
            android:layout_marginStart="@dimen/hs"
            android:layout_marginTop="@dimen/_10dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/header"/>

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="@dimen/_16dp"
            android:background="@drawable/bg_req_white_r20top"
            android:fillViewport="true"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv1">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_12dp"/>
                <androidx.recyclerview.widget.RecyclerView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:listitem="@layout/row_hanover_proposal"
                    tools:itemCount="6"
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginVertical="@dimen/_8dp"
                    android:paddingVertical="@dimen/_14dp"
                    android:paddingHorizontal="@dimen/_12dp"
                    android:layout_marginHorizontal="@dimen/hs"
                    android:background="@drawable/bg_req_grayf5_r12">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Notes"
                        style="@style/text_black_app_regular_12"/>
                    <EditText
                        android:id="@+id/notesEt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Leave your notes here..."
                        android:textColorHint="#B5B5B5"
                        style="@style/text_black_app_regular_12"
                        android:background="@color/trans"
                        android:layout_marginTop="@dimen/_5dp"
                        android:minHeight="@dimen/_45dp"
                        android:gravity="top"
                        />
                </LinearLayout>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Upload pictures"
                    style="@style/text_black_app_regular_12"
                    android:layout_marginHorizontal="@dimen/_16dp"
                    android:layout_marginTop="@dimen/_8dp"
                    android:layout_marginBottom="@dimen/_10dp"/>
                <androidx.recyclerview.widget.RecyclerView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:listitem="@layout/row_handover_image"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    android:orientation="horizontal"
                    android:layout_marginHorizontal="@dimen/_11dp"
                    android:layout_marginBottom="@dimen/_95dp"
                    />

            </LinearLayout>
        </androidx.core.widget.NestedScrollView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="85dp"
            android:gravity="center_vertical"
            android:background="@drawable/bg_req_black_r12top"
            app:layout_constraintBottom_toBottomOf="parent"
            android:paddingHorizontal="@dimen/_22dp">
            <android.widget.Button
                android:id="@+id/newRequestBtn"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="@dimen/_40dp"
                android:text="@string/new_request"
                style="@style/text_yellow_regular_14"
                android:background="@drawable/bg_req_trans_yellowstroke_r4"
                android:textAllCaps="false"
                android:layout_marginEnd="@dimen/_10dp"/>
            <android.widget.Button
                android:id="@+id/confirmOrderBtn"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="@dimen/_40dp"
                android:text="@string/confirm_order"
                style="@style/text_black_app_regular_14"
                android:background="@drawable/bg_btn_main"
                android:layout_marginStart="@dimen/_10dp"
                android:textAllCaps="false"/>
            <android.widget.Button
                android:id="@+id/confirmBtn"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="@dimen/_40dp"
                android:text="@string/confirm_order"
                style="@style/text_black_app_regular_14"
                android:background="@drawable/bg_btn_main"
                android:textAllCaps="false"/>
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>