<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/main_color"
        android:orientation="vertical">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_splash_bg"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/header"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:layout_marginHorizontal="@dimen/_16dp"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="More"
                style="@style/text_black_app_bold_20"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="@dimen/_10dp"
            android:background="@drawable/bg_req_white_r20top"
            android:fillViewport="true"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/header">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="@dimen/_24dp">
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/editProfileLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="@dimen/_16dp">
                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/userImg"
                        android:layout_width="@dimen/_45dp"
                        android:layout_height="@dimen/_45dp"
                        android:src="@drawable/profile_test"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"/>
                    <TextView
                        android:id="@+id/userNameTv"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        style="@style/text_black_app_medium_12"
                        app:layout_constraintStart_toEndOf="@id/userImg"
                        android:layout_marginStart="@dimen/_12dp"
                        app:layout_constraintTop_toTopOf="@id/userImg"
                        android:maxLines="2"
                        />
                    <TextView
                        android:id="@+id/phoneTv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/text_gray65_regular_10"
                        android:layout_marginTop="4dp"
                        app:layout_constraintStart_toStartOf="@id/userNameTv"
                        app:layout_constraintTop_toBottomOf="@id/userNameTv"/>
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_arrow_front"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"/>
                </androidx.constraintlayout.widget.ConstraintLayout>
                <TextView
                    android:id="@+id/warrantiesTv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/warranties"
                    style="@style/text_black_app_medium_12"
                    android:layout_marginTop="@dimen/_10dp"
                    android:paddingHorizontal="@dimen/_16dp"
                    android:gravity="center_vertical"
                    android:drawablePadding="@dimen/_8dp"
                    android:background="@drawable/bg_req_trans_lightgray"
                    android:paddingVertical="@dimen/_10dp"
                    app:drawableStartCompat="@drawable/ic_more_warranties"
                    app:drawableEndCompat="@drawable/ic_arrow_front" />
                <TextView
                    android:id="@+id/favoritesTv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/favorites"
                    style="@style/text_black_app_medium_12"
                    android:paddingHorizontal="@dimen/_16dp"
                    android:gravity="center_vertical"
                    android:drawablePadding="@dimen/_8dp"
                    android:paddingVertical="@dimen/_10dp"
                    android:background="@drawable/bg_req_trans_lightgray"
                    app:drawableStartCompat="@drawable/ic_more_fevorites"
                    app:drawableEndCompat="@drawable/ic_arrow_front" />


                <TextView
                    android:id="@+id/aboutUsTv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/about_us"
                    style="@style/text_black_app_medium_12"
                    android:paddingHorizontal="@dimen/_16dp"
                    android:gravity="center_vertical"
                    android:drawablePadding="@dimen/_8dp"
                    android:paddingVertical="@dimen/_10dp"
                    android:background="@drawable/bg_req_trans_lightgray"
                    app:drawableStartCompat="@drawable/ic_more_about"
                    app:drawableEndCompat="@drawable/ic_arrow_front" />
                <TextView
                    android:id="@+id/contactUsTv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/contact_us"
                    style="@style/text_black_app_medium_12"
                    android:paddingHorizontal="@dimen/_16dp"
                    android:gravity="center_vertical"
                    android:drawablePadding="@dimen/_8dp"
                    android:paddingVertical="@dimen/_10dp"
                    android:background="@drawable/bg_req_trans_lightgray"
                    app:drawableStartCompat="@drawable/ic_more_contact"
                    app:drawableEndCompat="@drawable/ic_arrow_front" />
                <TextView
                    android:id="@+id/faqTv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/faq"
                    style="@style/text_black_app_medium_12"
                    android:paddingHorizontal="@dimen/_16dp"
                    android:gravity="center_vertical"
                    android:drawablePadding="@dimen/_8dp"
                    android:paddingVertical="@dimen/_10dp"
                    android:background="@drawable/bg_req_trans_lightgray"
                    app:drawableStartCompat="@drawable/ic_more_about"
                    app:drawableEndCompat="@drawable/ic_arrow_front" />
                <TextView
                    android:id="@+id/notificationsTv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/notifications"
                    style="@style/text_black_app_medium_12"
                    android:paddingHorizontal="@dimen/_16dp"
                    android:gravity="center_vertical"
                    android:drawablePadding="@dimen/_8dp"
                    android:paddingVertical="@dimen/_10dp"
                    android:background="@drawable/bg_req_trans_lightgray"
                    app:drawableStartCompat="@drawable/more_notifications"
                    app:drawableEndCompat="@drawable/ic_arrow_front" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingVertical="@dimen/_8dp"
                    android:gravity="center_vertical"
                    android:paddingHorizontal="@dimen/_16dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/languages"
                        style="@style/text_black_app_medium_12"
                        android:gravity="center_vertical"
                        android:drawablePadding="@dimen/_8dp"
                        app:drawableStartCompat="@drawable/ic_more_language" />
                    <Space
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"/>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bg_req_graye0_r17"
                        android:gravity="center_vertical"
                        android:paddingVertical="@dimen/_8dp"
                        android:paddingHorizontal="@dimen/_16dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/english"
                            style="@style/text_black_app_medium_10"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/arabic"
                            style="@style/text_gray65_medium_10"
                            android:layout_marginStart="@dimen/_12dp"/>
                    </LinearLayout>
                </LinearLayout>
                <TextView
                    android:id="@+id/logoutTv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/logout"
                    style="@style/text_black_app_medium_12"
                    android:paddingHorizontal="@dimen/_16dp"
                    android:gravity="center_vertical"
                    android:drawablePadding="@dimen/_8dp"
                    android:paddingVertical="@dimen/_10dp"
                    android:background="@drawable/bg_req_trans_lightgray"
                    app:drawableStartCompat="@drawable/ic_more_logout"/>
            </LinearLayout>
        </androidx.core.widget.NestedScrollView>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>