<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/main_color"
        android:orientation="vertical">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_splash_bg"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/header"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:layout_marginHorizontal="@dimen/_16dp"
            app:layout_constraintTop_toTopOf="parent">

            <ImageButton
                android:id="@+id/backBtn"
                android:layout_width="@dimen/_45dp"
                android:layout_height="@dimen/_45dp"
                android:src="@drawable/ic_back"
                android:background="@drawable/bg_circle_white"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/accepted"
                style="@style/text_yellow_regular_12"
                android:drawablePadding="6dp"
                android:background="@drawable/bg_req_black_r4"
                android:paddingHorizontal="@dimen/_10dp"
                android:paddingVertical="@dimen/_5dp"
                android:visibility="visible"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:drawableStartCompat="@drawable/ic_timer" />
        </androidx.constraintlayout.widget.ConstraintLayout>
        <LinearLayout
            android:id="@+id/linearOrderNum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/header"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="@dimen/_12dp"
            android:layout_marginHorizontal="@dimen/_16dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/order"
                style="@style/text_black_app_simibold_18"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="#8935769"
                style="@style/text_black_app_simibold_18"
                android:layout_marginStart="@dimen/_8dp"/>
        </LinearLayout>

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="@dimen/_25dp"
            android:background="@drawable/bg_req_white_r20top"
            android:fillViewport="true"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/linearOrderNum">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingHorizontal="@dimen/_20dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Wensday 14 Jan 2021"
                    style="@style/text_black_app_simibold_10"
                    android:drawablePadding="@dimen/_8dp"
                    android:layout_marginTop="@dimen/_16dp"
                    app:drawableStartCompat="@drawable/ic_calender" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingVertical="@dimen/_15dp"
                    android:paddingHorizontal="@dimen/_12dp"
                    android:layout_marginTop="@dimen/_12dp"
                    android:background="@drawable/bg_req_grayf5_r12">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <androidx.cardview.widget.CardView
                            android:layout_width="@dimen/_50dp"
                            android:layout_height="@dimen/_50dp"
                            app:cardBackgroundColor="@color/trans"
                            app:cardCornerRadius="@dimen/_5dp"
                            app:cardElevation="0dp">
                            <ImageView
                                android:id="@+id/img"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:scaleType="centerCrop"/>
                        </androidx.cardview.widget.CardView>
                        <TextView
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:text="Apple Macbook pro 2020â€¨M1 500 Gb, 16 GB RAM (A12334)"
                            style="@style/text_black_app_regular_12"
                            android:layout_gravity="center_vertical"/>
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:gravity="center_horizontal"
                            android:layout_gravity="center_vertical"
                            android:layout_marginStart="@dimen/_10dp">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="1600 SR"
                                style="@style/text_gray65_bold_14"/>
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center_vertical">
                                <ImageView
                                    android:id="@+id/timerImg"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:src="@drawable/ic_timer"
                                    android:tint="@color/black"
                                    tools:ignore="UseAppTint" />
                                <ImageView
                                    android:id="@+id/warrantyImg"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:src="@drawable/ic_warranty"
                                    android:layout_marginStart="@dimen/_8dp"/>
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_1dp"
                        android:background="@color/grayea"
                        android:layout_marginTop="@dimen/_6dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/location"
                        style="@style/text_black_app_medium_12"
                        android:layout_marginTop="@dimen/_12dp"/>
                    <TextView
                        android:id="@+id/addressTv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Kind Fahed Street, Al rawda, Olya Area, Riyadh Saudi Arabia Kind Fahed Street, Al rawda, Olya Area, Riyadh Saudi Arabia"
                        style="@style/text_black_app_regular_10"
                        android:layout_marginTop="@dimen/_5dp"/>
                </LinearLayout>
                <android.widget.Button
                    android:id="@+id/actionBtn"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_45dp"
                    android:text="@string/cancel_order"
                    style="@style/text_black_app_regular_16"
                    android:background="@drawable/bg_btn_main"
                    android:layout_marginTop="@dimen/_18dp"
                    android:layout_marginBottom="@dimen/_30dp"
                    android:textAllCaps="false"/>
            </LinearLayout>
        </androidx.core.widget.NestedScrollView>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>