<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginEnd="@dimen/_45dp"
    android:orientation="vertical"
    android:layout_marginTop="@dimen/_16dp"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_req_black_r8top"
        android:paddingVertical="@dimen/_10dp">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/_12dp"
            android:src="@drawable/ic_logo_yellow" />
        <Space
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/bg_req_gray_r8bottom"
        android:paddingTop="@dimen/_12dp"
        android:paddingBottom="@dimen/_24dp">
        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:listitem="@layout/row_chat_piece_item"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="-15dp"
        android:layout_gravity="end"
        android:layout_marginEnd="@dimen/_20dp">
        <TextView
            android:id="@+id/cancelBtn"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_30dp"
            android:text="@string/cancel"
            style="@style/text_yellow_regular_12"
            android:background="@drawable/bg_req_black_r4"
            android:layout_marginHorizontal="@dimen/_6dp"
            android:layout_marginTop="0dp"
            android:layout_marginBottom="0dp"
            android:paddingHorizontal="@dimen/_15dp"
            android:gravity="center"/>
        <TextView
            android:id="@+id/confirmBtn"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_30dp"
            android:text="@string/confirm"
            style="@style/text_black_app_regular_12"
            android:background="@drawable/bg_btn_main"
            android:layout_marginHorizontal="@dimen/_6dp"
            android:layout_marginTop="0dp"
            android:layout_marginBottom="0dp"
            android:paddingHorizontal="@dimen/_15dp"
            android:gravity="center"/>
    </LinearLayout>
    <TextView
        android:id="@+id/timeTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="44 minutes ago"
        style="@style/text_gray90_regular_10"/>
</LinearLayout>