<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:paddingVertical="@dimen/_14dp"
    android:layout_marginVertical="@dimen/_5dp"
    android:background="@drawable/bg_req_grayf5_r12"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="@dimen/_16dp">
        <ImageView
            android:id="@+id/productImg"
            android:layout_width="@dimen/_50dp"
            android:layout_height="@dimen/_50dp"
            android:scaleType="fitCenter"
            android:src="@drawable/test_iphone2"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>
        <TextView
            android:id="@+id/productNameTv"
            android:layout_width="0dp"
            app:layout_constraintStart_toEndOf="@id/productImg"
            app:layout_constraintEnd_toStartOf="@id/moreBtn"
            app:layout_constraintTop_toTopOf="@id/productImg"
            app:layout_constraintBottom_toTopOf="@id/productColor"
            android:layout_height="wrap_content"
            android:text="Apple Iphone SE  A32341 "
            style="@style/text_black_app_medium_12"
            android:layout_marginStart="@dimen/_10dp"
            android:maxLines="2"
            android:layout_marginEnd="@dimen/_5dp"
            />
<!--        todo for order set visibility visible-->
        <ImageButton
            android:id="@+id/moreBtn"
            android:layout_width="@dimen/_22dp"
            android:layout_height="@dimen/_22dp"
            android:src="@drawable/ic_arrow_down"
            android:background="@drawable/bg_req_grayea_r2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:tint="@color/gray75"
            android:visibility="visible"/>
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/productColor"
            android:layout_width="@dimen/_8dp"
            android:layout_height="@dimen/_8dp"
            app:layout_constraintTop_toBottomOf="@id/productNameTv"
            app:layout_constraintBottom_toBottomOf="@id/productImg"
            app:layout_constraintStart_toStartOf="@id/productNameTv"
            android:src="@color/red"
            app:civ_border_overlay="true"
            app:civ_border_width="1dp"
            app:civ_border_color="@color/graye0"
            />
        <TextView
            android:id="@+id/colorTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Red Edition"
            style="@style/text_black_app_regular_10"
            android:layout_marginStart="@dimen/_8dp"
            app:layout_constraintStart_toEndOf="@id/productColor"
            app:layout_constraintTop_toTopOf="@id/productColor"
            app:layout_constraintBottom_toBottomOf="@id/productColor"/>
        <ImageView
            android:id="@+id/timerImg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_timer"
            android:tint="@color/black"
            app:layout_constraintTop_toTopOf="@id/colorTv"
            app:layout_constraintBottom_toBottomOf="@id/colorTv"
            app:layout_constraintStart_toEndOf="@id/colorTv"
            tools:ignore="UseAppTint"
            android:layout_marginStart="@dimen/_12dp"
            android:visibility="visible"
            />
        <ImageView
            android:id="@+id/warrantyImg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_warranty"
            android:tint="@color/black"
            app:layout_constraintTop_toTopOf="@id/colorTv"
            app:layout_constraintBottom_toBottomOf="@id/colorTv"
            app:layout_constraintStart_toEndOf="@id/timerImg"
            tools:ignore="UseAppTint"
            android:layout_marginStart="@dimen/_8dp"
            android:visibility="visible"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>
<!--    todo for orders set visibility 'gone' by default-->
    <LinearLayout
        android:id="@+id/moreLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/problerms"
            style="@style/text_black_app_medium_12"
            android:layout_marginHorizontal="@dimen/_16dp"
            android:layout_marginTop="@dimen/_10dp"
            android:drawablePadding="@dimen/_5dp"
            app:drawableStartCompat="@drawable/ic_problem" />
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/RVProblems"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_6dp"
            tools:listitem="@layout/row_text_black10"
            tools:itemCount="2"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/parts"
            style="@style/text_black_app_medium_12"
            android:layout_marginHorizontal="@dimen/_16dp"
            android:layout_marginTop="@dimen/_6dp"
            android:drawablePadding="@dimen/_5dp"
            app:drawableStartCompat="@drawable/ic_repare" />
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/RVParts"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:listitem="@layout/row_order_details_parts"
            tools:itemCount="1"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/_1dp"
            android:background="@color/graye0"
            android:layout_marginTop="@dimen/_4dp"
            android:layout_marginBottom="@dimen/_12dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/_16dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/sub_total"
                style="@style/text_gray65_medium_12"/>
            <Space
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/subTotalTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3500 SAR"
                style="@style/text_black_app_medium_12"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_12dp"
            android:layout_marginHorizontal="@dimen/_16dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/discount"
                style="@style/text_gray65_medium_12"/>
            <Space
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/discountPercentTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10%"
                style="@style/text_black_app_medium_12"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="("
                android:layout_marginStart="@dimen/_5dp"
                style="@style/text_black_app_medium_12"/>
            <TextView
                android:id="@+id/discountAmountTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3500 SAR"
                android:layout_marginHorizontal="@dimen/_2dp"
                style="@style/text_black_app_medium_12"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=")"
                style="@style/text_black_app_medium_12"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_12dp"
            android:layout_marginHorizontal="@dimen/_16dp">
            <TextView
                android:id="@+id/vatPercentTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="%15"
                style="@style/text_gray65_medium_12"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="VAT"
                android:layout_marginStart="5dp"
                style="@style/text_gray65_medium_12"/>
            <Space
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/vatAmountTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3500 SAR"
                style="@style/text_black_app_medium_12"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_12dp"
            android:layout_marginHorizontal="@dimen/_16dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/delivery"
                style="@style/text_gray65_medium_12"/>
            <Space
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/deliveryTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3500 SAR"
                style="@style/text_black_app_medium_12"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/_1dp"
            android:background="@color/graye0"
            android:layout_marginTop="@dimen/_12dp"
            android:layout_marginBottom="@dimen/_12dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="0dp"
            android:layout_marginHorizontal="@dimen/_16dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/total"
                style="@style/text_gray65_medium_14"/>
            <Space
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/totalTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3500 SAR"
                style="@style/text_black_app_medium_14"
                android:drawablePadding="@dimen/_8dp"
                app:drawableStartCompat="@drawable/ic_money" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>