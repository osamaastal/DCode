<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/main_color"
        android:orientation="vertical">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_splash_bg"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/header"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:layout_marginHorizontal="@dimen/_16dp"
            app:layout_constraintTop_toTopOf="parent">

            <ImageButton
                android:id="@+id/backBtn"
                android:layout_width="@dimen/_45dp"
                android:layout_height="@dimen/_45dp"
                android:src="@drawable/ic_back"
                android:background="@drawable/bg_circle_white"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                />
            <com.google.android.material.progressindicator.CircularProgressIndicator
                android:id="@+id/cProgress"
                android:layout_width="@dimen/_40dp"
                android:layout_height="@dimen/_40dp"
                app:indicatorColor="@color/black"
                app:trackColor="#33000000"
                app:indicatorSize="40dp"
                android:progress="4"
                android:max="5"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4"
                android:paddingTop="@dimen/_4dp"
                style="@style/text_black_app_bold_18"
                app:layout_constraintBottom_toBottomOf="@id/cProgress"
                app:layout_constraintTop_toTopOf="@id/cProgress"
                app:layout_constraintEnd_toEndOf="@id/cProgress"
                app:layout_constraintStart_toStartOf="@id/cProgress"
                />
        </androidx.constraintlayout.widget.ConstraintLayout>
        <TextView
            android:id="@+id/tv1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/need_fix"
            style="@style/text_black_app_bold_20"
            android:layout_marginStart="@dimen/hs"
            android:layout_marginTop="@dimen/_10dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/header"/>

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="@dimen/_16dp"
            android:background="@drawable/bg_req_white_r20top"
            android:fillViewport="true"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:layout_marginTop="@dimen/_16dp">
                    <androidx.recyclerview.widget.RecyclerView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:listitem="@layout/row_needfix_img"
                        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                        android:orientation="horizontal"
                        tools:itemCount="2"/>
                    <ImageView
                        android:layout_width="@dimen/_75dp"
                        android:layout_height="@dimen/_75dp"
                        android:scaleType="fitCenter"
                        android:padding="@dimen/_22dp"
                        android:src="@drawable/ic_add_gray"
                        android:layout_marginHorizontal="@dimen/_8dp"
                        android:background="@drawable/bg_req_grayf5_r12"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/_20dp"
                    android:background="@drawable/bg_req_black_r4"
                    android:orientation="vertical"
                    android:layout_marginTop="@dimen/_16dp"
                    android:padding="@dimen/_12dp"
                    android:layout_marginBottom="@dimen/_10dp">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/don_t_miss_replacement_promotion"
                        style="@style/text_yellow_simibold_12"
                        app:drawableStartCompat="@drawable/ic_info"
                        android:drawablePadding="@dimen/_8dp"
                        />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Up to 3 items youâ€™ll be reward on third item"
                        style="@style/text_yellow_regular_12"
                        android:layout_marginStart="@dimen/_22dp"/>
                </LinearLayout>
                <androidx.recyclerview.widget.RecyclerView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:listitem="@layout/row_needfix_main"
                    tools:itemCount="2"
                    android:layout_marginBottom="@dimen/_90dp"
                    />
            </LinearLayout>
        </androidx.core.widget.NestedScrollView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_85dp"
            android:gravity="center_vertical"
            android:paddingHorizontal="@dimen/hs"
            android:background="@drawable/bg_req_black_r8top"
            app:layout_constraintBottom_toBottomOf="parent">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/selected_parts"
                    style="@style/text_white_regular_12"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Full Screen, Housing body.."
                    style="@style/text_yellow_medium_12"
                    android:drawablePadding="@dimen/_8dp"
                    android:layout_marginTop="@dimen/_4dp"
                    app:drawableStartCompat="@drawable/ic_info" />
            </LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_30dp"
                android:text="@string/next"
                style="@style/text_black_app_regular_12"
                android:background="@drawable/bg_btn_main"
                android:gravity="center"
                android:paddingHorizontal="@dimen/_18dp"
                android:layout_marginStart="@dimen/_8dp"/>
                


        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>