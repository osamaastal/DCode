<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item>

        <layer-list>

            <item>
                <shape>
                    <solid android:color="#414045"/>
                    <corners
                        android:radius="4dp" />
                    <padding
                        android:bottom="8dp"
                        android:left="15dp"
                        android:right="15dp"
                        android:top="8dp" />
                    <stroke android:color="#414045"
                        android:width="1dp"/>
                </shape>
            </item>

            <item android:end="15dp">
                <bitmap android:gravity="center_vertical|end" android:src="@drawable/arrow_down_img" />
            </item>

        </layer-list>

    </item>

</selector>